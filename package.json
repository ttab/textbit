{
  "name": "@ttab/textbit",
  "version": "0.21.1",
  "license": "MIT",
  "description": "Textbit is an editable component created as part of the Elephant project, based on Slate.",
  "author": {
    "name": "Danne Lundqvist"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.es.js"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.cjs.js"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "test": "jest -c ./jest.config.ts",
    "build": "tsc --project ./tsconfig.build.json && vite build",
    "lint": "eslint . --cache",
    "lint:fix": "eslint . --fix",
    "tsc": "tsc --noEmit",
    "preview": "vite preview",
    "preversion": "npm test && npm run build",
    "postversion": "git push && git push --tags"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/ttab"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ttab/textbit.git"
  },
  "devDependencies": {
    "@slate-yjs/core": "^1.0.2",
    "@stylistic/eslint-plugin": "^2.10.0",
    "@swc/jest": "^0.2.37",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.2.0",
    "@types/escape-html": "^1.0.4",
    "@types/is-hotkey": "^0.1.10",
    "@types/is-url": "^1.2.32",
    "@types/jest": "^29.5.14",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^19.0.0",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react-swc": "^3.7.1",
    "esbuild": "^0.24.0",
    "esbuild-serve": "^1.0.1",
    "eslint": "^9.20.1",
    "eslint-plugin-jest": "^28.8.3",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.1.0",
    "glob": "^11.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "react": "^18.3.1",
    "react-dom": "^19.0.0",
    "react-icons": "^5.4.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.12.2",
    "vite": "^5.4.10",
    "vite-plugin-dts": "^4.3.0",
    "vite-plugin-lib-inject-css": "^2.1.1"
  },
  "peerDependencies": {
    "@slate-yjs/core": "^1.0.2",
    "react": "^18.3.1"
  },
  "dependencies": {
    "@slate-yjs/react": "^1.1.0",
    "is-hotkey": "^0.2.0",
    "is-url": "^1.2.4",
    "slate": "^0.110.2",
    "slate-history": "^0.110.3",
    "slate-hyperscript": "^0.100.0",
    "slate-react": "^0.112.1",
    "uuid": "^11.0.3"
  }
}
